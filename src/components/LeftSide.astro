---
import { Icon } from "astro-icon/components";
import Block from "../components/Block.astro";
---

<div class="container">
  <Block icon="contact" title="Contact me">
    <div class="icon">
      <Icon name={"mdi:email"} size={18} />
      <span>rafaelfl.lc@hotmail.com</span>
    </div>
    <div class="icon">
      <Icon name={"mdi:linkedin"} size={20} />
      <a href="https://www.linkedin.com/in/rafaelflc/" target="_blank"
        >linkedin.com/in/rafaelflc</a
      >
    </div>
    <div class="icon">
      <Icon name={"mdi:github"} size={20} />
      <a href="https://github.com/Rflopz" target="_blank">github.com/Rflopz</a>
    </div>
    <div class="icon">
      <Icon name={"mdi:cellphone"} size={20} />
      <span>+52 6624 19 20 84</span>
    </div>
  </Block>
  <Block icon="code" title="Profile">
    <div class="profile">
      <p>
        I'm a software engineer really passionated for the clean, redable and
        reusable code.
      </p>
      <p>
        I like to keep myself updated with new technologies, learning and
        experimenting.
      </p>
      <p>
        Good working with teams, I like to share and receive knoledge and
        feedback, comunicative and focus on problem solving
      </p>
    </div>
  </Block>
  <Block icon="language" title="Languages">
    <div class="languages">
      <span><b>Spanish:</b> Native</span>
      <span><b>English:</b> C1</span>
    </div>
  </Block>
  <Block icon="desktop-tower-monitor" title="OS">
    <div class="os">
      <span>Macos</span>
      <span>Linux/debian</span>
      <span>Windows</span>
    </div>
  </Block>
  <Block icon="school" title="Education">
    <div class="education">
      <div>
        <span>Bachelor degree in ICT</span>
        <br />
        <span class="gray">2012 - 2017</span>
      </div>
      <div>
        <span>Bootcamps</span>
      </div>
    </div>
  </Block>
  <div class="footer">
    <span class="gray"> made with Astro</span>
  </div>
</div>

<style>
  div.container {
    background-color: #dedede;
    width: 375px;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  div.icon {
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
    gap: 10px;
    margin-top: 10px;
  }

  div.languages {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  div.education {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  div.os {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  a {
    color: black;
    text-decoration: none;
  }

  .profile {
    max-width: 90%;
  }

  .profile p {
    text-align: justify;
    margin: 10px 0;
  }

  .profile p:last-child {
    margin-bottom: 0;
  }

  .footer {
    margin: auto;
  }
</style>
